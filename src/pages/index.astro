---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Features from '../components/Features.astro';
import SystemInfo from '../components/SystemInfo.astro';
import Benefits from '../components/Benefits.astro';
import Team from '../components/Team.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Kenkomed - Software para Kinesiólogos | Sistema de Gestión Clínica DSS"
  description="Software profesional para kinesiólogos y fisioterapeutas en Chile. Sistema DSS con historias clínicas digitales, cuestionarios automatizados (EVA, PSFS, Barthel) y gestión integral de pacientes. Optimiza tu centro kinesiológico."
  keywords="software para kinesiólogos chile, sistema fisioterapeutas, gestión clínica kinesiología, historias clínicas digitales, software médico kinesiología, sistema DSS clínico, gestión pacientes fisioterapia, software centro kinesiológico chile, ficha clínica digital, cuestionarios clínicos, EVA, PSFS, Barthel, agenda médica"
>
  <Header />
  <Hero />
  <Features />
  <Services />
  <SystemInfo />
  <Benefits />
  <Team />
  <Contact />
  <Footer />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  .section-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease-out;
  }
  
  .section-animate.animate-fade-in {
    opacity: 1;
    transform: translateY(0);
  }
</style>
