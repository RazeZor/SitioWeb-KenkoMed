                </div>

                <!-- Title -->
                <div>
                  <span class={`inline-block text-sm font-semibold uppercase tracking-wider ${service.color === 'primary' ? 'text-primary-300' : 'text-medical-300'} mb-3`}>
                    Servicio {index + 1}
                  </span>
                  <h3 class="text-5xl lg:text-6xl font-bold leading-tight mb-6">
                    {service.title}
                  </h3>
                </div>

                <!-- Description -->
                <p class="text-xl lg:text-2xl text-gray-200 leading-relaxed max-w-lg">
                  {service.description}
                </p>

                <!-- Features List -->
                <div class="space-y-4">
                  {service.features.map(feature => (
                    <div class="flex items-center space-x-4 text-lg">
                      <div class={`w-2 h-2 rounded-full ${service.color === 'primary' ? 'bg-primary-400' : 'bg-medical-400'}`}></div>
