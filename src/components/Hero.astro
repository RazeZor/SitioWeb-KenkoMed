<section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/FondoPantallaHero1.webp" 
      alt="Equipo médico profesional" 
      class="w-full h-full object-cover"
      fetchpriority="high"
    />
    <!-- Gradiente con mejor transición -->
    <div class="absolute inset-0 bg-gradient-to-r from-sky-950/80 via-primary-900/70 to-primary-700/70"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 text-center text-white max-w-5xl mx-auto px-4 sm:px-6 md:px-10 py-16 md:py-20 lg:py-28">
    <div class="space-y-6 sm:space-y-8 animate-fade-in">

      <!-- Main Heading -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold leading-tight">
        <span class="bg-gradient-to-r from-white to-primary-200 bg-clip-text text-transparent">
          Kenkomed
        </span>
      </h1>
      
      <!-- Subtitle -->
      <h2 class="text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-light text-primary-50 max-w-2xl sm:max-w-3xl mx-auto leading-relaxed">
        Software de Soporte y ayuda a la Decisión Clínica
      </h2>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-6 sm:pt-8">
        <button class="group border-2 border-white text-white px-6 sm:px-8 py-3 sm:py-4 rounded-full font-semibold text-base sm:text-lg hover:bg-white hover:text-primary-600 transition-all duration-300">
          Ver Demo en Vivo
        </button>
      </div>
    </div>

    <!-- Floating Elements (con tamaños responsivos) -->
    <div class="absolute top-10 sm:top-20 left-5 sm:left-10 w-12 sm:w-16 md:w-20 h-12 sm:h-16 md:h-20 bg-medical-400/20 rounded-full animate-bounce-subtle"></div>
    <div class="absolute top-28 sm:top-40 right-10 sm:right-20 w-10 sm:w-14 md:w-16 h-10 sm:h-14 md:h-16 bg-primary-400/20 rounded-full animate-bounce-subtle" style="animation-delay: 0.5s;"></div>
    <div class="absolute bottom-28 sm:bottom-40 left-10 sm:left-20 w-8 sm:w-10 md:w-12 h-8 sm:h-10 md:h-12 bg-white/10 rounded-full animate-bounce-subtle" style="animation-delay: 1s;"></div>
  </div>
</section>
