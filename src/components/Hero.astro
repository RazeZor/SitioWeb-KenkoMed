<section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/public/FondoPantallaHero1.webp" 
      alt="Equipo médico profesional" 
      class="w-full h-full object-cover"
      fetchpriority="high"
    />
    <!-- Gradiente mejorado con mejor transición -->
    <div class="absolute inset-0 bg-gradient-to-r from-primary-900/80 via-primary-800/70 to-primary-300/70"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-6 py-20">
    <div class="space-y-8 animate-fade-in">

      <!-- Main Heading -->
      <h1 class="text-8xl md:text-8xl font-bold leading-tight">
        <span class="bg-gradient-to-r from-white to-primary-200 bg-clip-text text-transparent">
          Kenkomed
        </span>
      </h1>
      
      <!-- Subtitle más consistente -->
      <h2 class="text-5xl md:text-4xl font-light text-primary-50 max-w-3xl mx-auto leading-relaxed">
        Software de Soporte y ayuda a la Decisión Clínica
      </h2>
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-8">
        
        <button class="group border-2 border-white text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-primary-600 transition-all duration-300">
          Ver Demo en Vivo
        </button>
      </div>
    </div>

    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-medical-400/20 rounded-full animate-bounce-subtle"></div>
    <div class="absolute top-40 right-20 w-16 h-16 bg-primary-400/20 rounded-full animate-bounce-subtle" style="animation-delay: 0.5s;"></div>
    <div class="absolute bottom-40 left-20 w-12 h-12 bg-white/10 rounded-full animate-bounce-subtle" style="animation-delay: 1s;"></div>
  </div>

</section>