<style>
  /* === VARIABLES CSS === */
  :root {
    --color-primario: #667eea;
    --color-secundario: #764ba2;
    --color-texto-principal: #ffffff;
    --color-texto-secundario: #f8fafc;
    --color-fondo-tarjeta: rgba(255, 255, 255, 0.95);
    --color-fondo-tarjeta-hover: rgba(255, 255, 255, 1);
    --sombra-suave: 0 8px 32px rgba(0, 0, 0, 0.1);
    --sombra-intensa: 0 20px 60px rgba(0, 0, 0, 0.15);
    --radio-borde: 20px;
    --transicion-suave: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* === SECCIÓN PRINCIPAL === */
  .seccion-equipo {
    position: relative;
    padding: 5rem 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
    min-height: 100vh;
  }

  /* === OVERLAY DE FONDO === */
  .fondo-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/MINIS.png');
    background-size: 70% auto;
    background-position: right 90% center;
    background-repeat: no-repeat;
    opacity: 0.95;
    transition: var(--transicion-suave);
    z-index: 1;
  }

  .fondo-overlay::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 100%);
    z-index: 1;
  }

  /* === CONTENEDOR PRINCIPAL === */
  .contenedor {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 10;
  }

  /* === ENCABEZADO DE SECCIÓN === */
  .encabezado-seccion {
    text-align: center;
    margin-bottom: 4rem;
    opacity: 0;
    transform: translateY(30px);
    animation: aparecerDesdeAbajo 0.8s forwards;
  }

  .titulo-principal {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    color: var(--color-texto-principal);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .texto-destacado {
    background: linear-gradient(135deg, var(--color-primario), var(--color-secundario));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .descripcion-principal {
    font-size: 1.25rem;
    color: var(--color-texto-secundario);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.7;
    opacity: 0.9;
  }

  /* === GRID DEL EQUIPO === */
  .grid-equipo {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1.2rem;
    margin-bottom: 3rem;
    justify-items: center;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  /* === TARJETAS DE MIEMBROS === */
  .tarjeta-miembro {
    width: 100%;
    max-width: 220px;
    cursor: pointer;
    opacity: 0;
    transform: translateY(40px);
    animation: aparecerTarjeta 0.6s forwards;
    transition: var(--transicion-suave);
  }

  .contenido-tarjeta {
    backdrop-filter: blur(25px);
    border: 1px solid rgba(255, 255, 255, .18);
    border-radius: 18px;
    padding: 1.4rem;
    box-shadow: 0 8px 32px #00000040, 0 4px 12px #ffffff1a inset;
    transition: var(--transicion-suave);
    height: 100%;
    display: flex
;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    background: rgb(0, 0, 0);
    }

  .contenido-tarjeta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primario), var(--color-secundario));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  /* === EFECTOS HOVER === */
  .tarjeta-miembro:hover {
    transform: translateY(-8px) scale(1.05);
  }

  .tarjeta-miembro:hover .contenido-tarjeta {
    backdrop-filter: blur(86px);
    box-shadow: 0 16px 40px #0000004d, 0 8px 20px #ffffff26 inset;
    border-color: #ffffff4d;
    background: currentColor;
}
  .tarjeta-miembro:hover .contenido-tarjeta::before {
    transform: scaleX(1);
  }

  .tarjeta-miembro:hover .imagen-miembro {
    transform: scale(1.1);
  }

  .tarjeta-miembro:hover .overlay-imagen {
    opacity: 0.3;
  }

  /* === IMAGEN DEL MIEMBRO === */
  .contenedor-imagen {
    position: relative;
    width: 80px;
    height: 80px;
    margin: 0 auto 1rem;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid rgba(255, 255, 255, 0.9);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  }

  .imagen-miembro {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .overlay-imagen {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-primario), var(--color-secundario));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  /* === INFORMACIÓN DEL MIEMBRO === */
  .info-miembro {
    text-align: center;
    flex-grow: 1;
    margin-bottom: 1rem;
  }

  .nombre-miembro {
    font-size: 1.1rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0.4rem;
    line-height: 1.3;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .especialidad-miembro {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primario);
    background: rgba(102, 126, 234, 0.2);
    backdrop-filter: blur(10px);
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    margin-bottom: 0.8rem;
    border: 1px solid rgba(102, 126, 234, 0.3);
  }

  .descripcion-miembro {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.4;
    margin: 0;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4);
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* === REDES SOCIALES === */
  .redes-sociales {
    display: flex;
    justify-content: center;
    gap: 0.6rem;
    margin-top: auto;
  }

  .enlace-social {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .enlace-social::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50%;
    transition: transform 0.3s ease;
    z-index: -1;
  }

  .instagram::before {
    background: linear-gradient(135deg, #833ab4, #fd1d1d, #fcb045);
  }

  .linkedin::before {
    background: #0077b5;
  }

  .github::before {
    background: #333;
  }

  .enlace-social:hover {
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .icono-social {
    width: 16px;
    height: 16px;
    z-index: 1;
  }

  /* === OVERLAY DE FONDO MEJORADO === */
  .fondo-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/MINIS.png');
    background-size: 70% auto;
    background-position: right 90% center;
    background-repeat: no-repeat;
    opacity: 0.85;
    transition: var(--transicion-suave);
    z-index: 1;
  }

  .fondo-overlay::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.2) 100%);
    z-index: 1;
  }

  /* === BOTÓN PRINCIPAL === */
  .contenedor-boton {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  .boton-principal {
    background: linear-gradient(135deg, var(--color-primario), var(--color-secundario));
    color: white;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.3);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .boton-principal::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
  }

  .boton-principal:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 12px 32px rgba(102, 126, 234, 0.4);
  }

  .boton-principal:hover::before {
    left: 100%;
  }

  /* === ANIMACIONES === */
  @keyframes aparecerDesdeAbajo {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes aparecerTarjeta {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Nueva animación más suave - solo entrada */
  @keyframes deslizarSuave {
    0% {
      transform: translateX(100%);
      opacity: 0.3;
    }
    100% {
      transform: translateX(0);
      opacity: 0.95;
    }
  }

  /* === RESPONSIVIDAD === */
  @media (max-width: 1200px) {
    .grid-equipo {
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      max-width: 800px;
    }
    
    .tarjeta-miembro {
      max-width: 250px;
    }
  }

  @media (max-width: 768px) {
    .contenedor {
      padding: 0 1rem;
    }

    .grid-equipo {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      max-width: 500px;
    }

    .tarjeta-miembro {
      max-width: 200px;
    }

    .contenido-tarjeta {
      padding: 1.2rem;
    }

    .contenedor-imagen {
      width: 70px;
      height: 70px;
    }

    .nombre-miembro {
      font-size: 1rem;
    }

    .especialidad-miembro {
      font-size: 0.7rem;
      padding: 0.25rem 0.6rem;
    }

    .descripcion-miembro {
      font-size: 0.75rem;
      -webkit-line-clamp: 3;
    }

    .fondo-overlay {
      background-size: 90% auto;
      background-position: center right;
    }

    .titulo-principal {
      font-size: 2.5rem;
    }

    .descripcion-principal {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .seccion-equipo {
      padding: 3rem 0;
    }

    .encabezado-seccion {
      margin-bottom: 2.5rem;
    }

    .grid-equipo {
      grid-template-columns: 1fr;
      max-width: 250px;
    }

    .contenido-tarjeta {
      padding: 1rem;
    }

    .contenedor-imagen {
      width: 60px;
      height: 60px;
    }

    .nombre-miembro {
      font-size: 0.95rem;
    }

    .descripcion-miembro {
      font-size: 0.7rem;
      -webkit-line-clamp: 2;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    inicializarComponenteEquipo();
  });

  function inicializarComponenteEquipo() {
    const tarjetasMiembros = document.querySelectorAll('.tarjeta-miembro');
    const fondoOverlay = document.getElementById('fondo-overlay');
    let imagenInicialGuardada = '/MINIS.png';

    // Configurar eventos de click en las tarjetas
    tarjetasMiembros.forEach(tarjeta => {
      tarjeta.addEventListener('click', function() {
        manejarClickTarjeta(this, fondoOverlay);
      });
    });

    // Configurar cierre del overlay con doble click
    fondoOverlay?.addEventListener('dblclick', function() {
      restaurarImagenInicial(this, imagenInicialGuardada);
    });

    // Configurar cierre del overlay con tecla ESC
    document.addEventListener('keydown', function(evento) {
      if (evento.key === 'Escape') {
        restaurarImagenInicial(fondoOverlay, imagenInicialGuardada);
      }
    });
  }

  function manejarClickTarjeta(tarjeta, fondoOverlay) {
    const imagenMiembro = tarjeta.getAttribute('data-imagen-miembro');
    const nombreMiembro = tarjeta.getAttribute('data-nombre-miembro');
    
    if (imagenMiembro && fondoOverlay) {
      console.log('[Equipo] Cambiando imagen de fondo a:', imagenMiembro);
      
      // Aplicar nueva animación más suave
      aplicarAnimacionSuave(fondoOverlay, imagenMiembro);
      
      // Efecto visual en la tarjeta clickeada
      aplicarEfectoTarjeta(tarjeta);
    }
  }

  function aplicarAnimacionSuave(fondoOverlay, imagenMiembro) {
    // Configurar la nueva imagen de fondo
    fondoOverlay.style.backgroundImage = `url("${imagenMiembro}")`;
    fondoOverlay.style.backgroundSize = '60% auto';
    fondoOverlay.style.backgroundPosition = 'right 95% center';
    fondoOverlay.style.backgroundRepeat = 'no-repeat';
    
    // Aplicar animación suave de entrada desde la derecha
    fondoOverlay.style.animation = 'deslizarSuave 1.2s cubic-bezier(0.23, 1, 0.32, 1) forwards';
    
    // Limpiar la animación después de completarse
    setTimeout(() => {
      fondoOverlay.style.animation = '';
    }, 1200);
  }

  function aplicarEfectoTarjeta(tarjeta) {
    // Efecto de "pulso" más sutil en la tarjeta clickeada
    tarjeta.style.transform = 'translateY(-8px) scale(1.03)';
    tarjeta.style.transition = 'all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1)';
    
    setTimeout(() => {
      tarjeta.style.transform = '';
      tarjeta.style.transition = '';
    }, 300);
  }

  function restaurarImagenInicial(fondoOverlay, imagenInicial) {
    if (fondoOverlay) {
      console.log('[Equipo] Restaurando imagen inicial');
      
      // Transición suave de vuelta a la imagen inicial
      fondoOverlay.style.transition = 'all 0.8s ease-out';
      fondoOverlay.style.backgroundImage = `url("${imagenInicial}")`;
      fondoOverlay.style.backgroundSize = '70% auto';
      fondoOverlay.style.backgroundPosition = 'right 90% center';
      
      // Limpiar la transición después
      setTimeout(() => {
        fondoOverlay.style.transition = '';
      }, 800);
    }
  }
</script>