    }
  }
</style>


<script>
  document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.card');
    const backgroundOverlay = document.getElementById('background-overlay');
    const closeBtn = document.getElementById('close-overlay');
    let isOverlayActive = false;

    cards.forEach(card => {
      card.addEventListener('click', function() {
        const memberImage = this.getAttribute('data-member-image');
        const memberName = this.getAttribute('data-member-name');
        
        if (memberImage && backgroundOverlay) {
          console.log('[v0] Aplicando imagen de fondo:', memberImage);
          
          // Si ya hay un overlay activo, hacer transici칩n suave
          if (isOverlayActive) {
            // Fade out temporalmente para cambiar imagen
            backgroundOverlay.style.opacity = '0.3';
            
            setTimeout(() => {
              backgroundOverlay.style.backgroundImage = `url("${memberImage}")`;
              backgroundOverlay.style.opacity = '0.85';
            }, 200);
          } else {
            // Primera vez activando el overlay
            backgroundOverlay.style.backgroundImage = `url("${memberImage}")`;
            backgroundOverlay.style.backgroundSize = '60% auto';
            backgroundOverlay.style.backgroundPosition = '2% center';
            backgroundOverlay.style.backgroundRepeat = 'no-repeat';
            
            setTimeout(() => {
              backgroundOverlay.classList.add('active');
              closeBtn?.classList.add('show');
            }, 50);
            
            isOverlayActive = true;
          }
          
          // Agregar efecto de vibraci칩n sutil a la card clickeada
          this.style.animation = 'cardPulse 0.6s ease-out';
          
          setTimeout(() => {
            this.style.animation = '';
          }, 600);
        }
      });
    });

    // Funci칩n para cerrar el overlay
    function closeOverlay() {
      if (backgroundOverlay && isOverlayActive) {
        backgroundOverlay.classList.remove('active');
        closeBtn?.classList.remove('show');
        isOverlayActive = false;
        
        setTimeout(() => {
          backgroundOverlay.style.backgroundImage = '';
        }, 800);
      }
    }

    // Cerrar con el bot칩n
    closeBtn?.addEventListener('click', closeOverlay);
    
    // Cerrar con ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && isOverlayActive) {
        closeOverlay();
      }
    });

    // Cerrar clickeando en el overlay (opcional)
    backgroundOverlay?.addEventListener('click', function(e) {
      if (e.target === this) {
        closeOverlay();
      }
    });
  });

  const style = document.createElement('style');
  style.textContent = `
    @keyframes cardPulse {
      0% { transform: translate(0px, -16px) scale(1.02); }
      50% { transform: translate(0px, -20px) scale(1.05); box-shadow: 0 20px 40px rgba(0,0,0,0.3); }
      100% { transform: translate(0px, -16px) scale(1.02); }
    }
  `;
  document.head.appendChild(style);
</script>
